<Window x:Class="REMINDER_APPLICATION.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:REMINDER_APPLICATION"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <!-- Input Fields -->
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="16" Text="Reminder Title:"/>
        <TextBox x:Name="TitleTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,10,0,0"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" FontSize="16" Text="Description:"/>
        <TextBox x:Name="DescriptionTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="120,40,0,0"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" FontSize="16" Text="Set Time:"/>
        <DatePicker x:Name="ReminderDatePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,70,0,0"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" FontSize="16" Text="Priority:"/>
        <ComboBox x:Name="PriorityComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,100,0,0">
            <ComboBoxItem Content="High"/>
            <ComboBoxItem Content="Medium"/>
            <ComboBoxItem Content="Low"/>
        </ComboBox>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" FontSize="16" Text="Category:"/>
        <ComboBox x:Name="CategoryComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,130,0,0">
            <ComboBoxItem Content="Work"/>
            <ComboBoxItem Content="Personal"/>
            <ComboBoxItem Content="Health"/>
        </ComboBox>

        <!-- Buttons -->
        <Button Content="Add Reminder" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="120,160,0,0" Click="AddReminderButton_Click"/>
        <Button Content="Edit Reminder" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="330,160,0,0" Click="EditReminderButton_Click"/>
        <Button Content="Delete Reminder" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="540,160,0,0" Click="DeleteReminderButton_Click"/>

        <!-- List of Reminders -->
        <ListView x:Name="ReminderListView" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,200,10,10" Height="200" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="150"/>
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="250"/>
                    <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time}" Width="150"/>
                    <GridViewColumn Header="Priority" DisplayMemberBinding="{Binding Priority}" Width="100"/>
                    <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
